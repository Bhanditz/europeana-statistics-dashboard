.previous-sheet
  %h3
    =h show_project_name(@core_project)
    %span.gray= " / "
    = link_to "Reports", account_project_impl_aggregations_path(@core_project.account, @core_project), class: "thin"
  .panel.panel-default.sheet.sub
    .panel-body
      .row
        .col-sm-9
          - if @impl_aggregation.genre == "country"
            = render "impl/aggregations/countries"
          - elsif @impl_aggregation.genre == "provider"
            = render "impl/aggregations/providers", locals: {impl_aggregation: @impl_aggregation, account: @account, core_project: @core_project}
          -else
            = render "impl/aggregations/data_providers"

        .col-sm-3
          .well
            %h5="Edit #{@impl_aggregation.genre.titleize}"
            %hr
            = render "impl/aggregations/form"