%head
  %meta{:content => "Search, clean and visualize open data with Europeana! Sign up for free!", :name => "description"}
  %meta{:content => "Pykih Software LLP", :name => "author"}

- content_for :title do
  Sign Up Â· Europeana

.row
  .col-sm-4
    %br
    %br
    .panel.panel-default
      .panel-body
        .col-sm-12
          %br
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
            = f.input :username, required: true,autofocus: true
            = f.input :email, as: :email, placeholder: 'user@domain.com', required: true
            = f.input :password, as: :password, required: true, input_html:{style: "margin-bottom: 10px;"}
            - if @r.present?
              = f.input :referred_by_account_id, as: :hidden, input_html: {value: @r}
            = f.button :submit, "Sign Up", class: "btn btn-lg btn-primary"
    = render "accounts/shared/links"
    %br
    %br