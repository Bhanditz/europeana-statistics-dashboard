.previous-sheet
  %h3
    = show_project_name(@core_project).html_safe
    %span.thin= " / "
    = link_to "Articles", account_core_project_articles_path(@core_project.account, @core_project), class: "thin gray"

  .panel.panel-default.sheet.sub
    .panel-body
      .pull-right
        = link_to 'Compose New article', new_account_core_project_article_path(@account, @core_project), class: "btn btn-orange"
      %h1 Listing Articles
      %table.table.table-condensed
        %thead
          %tr
            %th Name
            %th Status
            %th
            %th
        %tbody
          - @core_articles.each do |core_article|
            %tr
              %td= link_to core_article.name,account_core_project_article_path(@account, @core_project, core_article)
              %td= core_article.status
              %td= link_to 'Edit', edit_account_core_project_article_path(@account, @core_project, core_article)
              %td= icon_del(account_core_project_article_path(@account, @core_project, core_article))
