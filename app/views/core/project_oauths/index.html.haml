- content_for :title do
  = "Project Profile Â· #{@core_project.name}"
  
.previous-sheet
  %h3= show_project_name(@core_project).html_safe
  .panel.panel-default.sheet.sub
    .panel-body
      .row
        .col-sm-2= render partial: "core/projects/sidebar"
        .col-sm-10
          .panel.panel-default{"data-intro" => "You can integrate your external application accounts such as Twitter and Google, so we can pull application data from those accounts", "data-position" => "bottom"}
            .panel-heading
              .panel-title 
                External Application Integrations
                .pull-right
                  .btn-group
                    %button.btn.btn-orange.btn-sm.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
                      Add new integration
                      %span.caret
                      %span.sr-only Toggle Dropdown
                    %ul.dropdown-menu{:role => "menu"}
                      %li= link_to "Twitter", create_session_oauth_account_core_project_path(current_account, @core_project, "twitter")
                      %li= link_to "Google", create_session_oauth_account_core_project_path(current_account, @core_project, "google_oauth2")
            .panel-body
              - unless @core_project_oauths.nil?
                %table.table.table-condensed
                  %thead
                    %tr
                      %th Unique id
                      %th Provider
                      %th 
                  %tbody
                    - @core_project_oauths.each do |c|
                      %tr
                        %td
                          - if c.url.blank?
                            = c.to_s
                          - else
                            =link_to c.to_s, c.url, target: "_blank"
                        %td=c.provider_to_s.titleize
                        %td=link_to icon_del(destroy_token_oauth_account_core_project_path(current_account, @core_project, c)), :confirm => 'Are you sure you want to remove?', :method => :delete 