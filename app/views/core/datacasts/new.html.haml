- content_for :title do
  Data Cast Â· #{@core_project.name}
= javascript_include_tag "datacast"
.previous-sheet
  %h3
    = show_project_name(@core_project).html_safe
    %span.thin= " / "
    = link_to "Datacast", account_core_project_datacasts_path(@core_project.account, @core_project)
  .panel.panel-default.sheet.sub
    .panel-body
      %h4 Add new Datacast
      %hr
      - url = account_core_project_datacasts_path(@core_project.account,@core_project)
      .col-sm-6
        = render partial: "form", locals: {url: url, method: :post,core_db_connection_id: params[:db]}
      .col-sm-6
        #preview_output_grid{style: "width:100%;height:480px;overflow:scroll;display:none"}
        %textarea.form-control#preview_output_error{rows: 20, style: "overflow-y:scroll"}